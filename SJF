#include <stdio.h>
int main(){
    int n;
    printf("Enter number of processes: ");
    scanf("%d",&n);
    int bt[20],pr[20],rt[20],wt[20],tat[20],pid[20];
    int time=0,completed=0;
    for(int i=0;i<n;i++){
        pid[i]=i+1;
        printf("P%d (BT Priority): ",i+1);
        scanf("%d%d",&bt[i],&pr[i]);
        rt[i]=bt[i];
    }
    while(completed<n){
        int pos=-1,high=-1;
        for(int i=0;i<n;i++){
            if(rt[i]>0&&pr[i]>high){
                high=pr[i];
                pos=i;
            }
        }
        rt[pos]--;
        time++;
        if(rt[pos]==0){
            completed++;
            tat[pos]=time;
            wt[pos]=tat[pos]-bt[pos];
        }
    }
    printf("\nProcess\tBT\tPriority\tWT\tTAT\n");
    for(int i=0;i<n;i++){
        printf("P%d\t%d\t%d\t\t%d\t%d\n",pid[i],bt[i],pr[i],wt[i],tat[i]);
    }
    return 0;
}
